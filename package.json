{
  "name": "yandex-middle-frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": ">=18.16.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm-run-all test lint"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "start": "vite build & node server.cjs",
    "lint": "eslint --ext .js,.ts . && stylelint '**/*{.css,.scss}' && tsc --noEmit",
    "lint:fix": "eslint --ext .js,.ts . --fix && stylelint '**/*{.css,.scss}' --fix",
    "test": "./node_modules/.bin/mocha",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/chai": "^4.3.9",
    "@types/mocha": "^10.0.3",
    "@types/sinon": "^10.0.20",
    "@typescript-eslint/eslint-plugin": "^6.6.0",
    "@typescript-eslint/parser": "^6.6.0",
    "autoprefixer": "^10.4.15",
    "chai": "^4.3.10",
    "eslint": "^8.48.0",
    "eslint-config-airbnb": "^19.0.4",
    "express": "^4.18.2",
    "husky": "^8.0.3",
    "jsdom": "^22.1.0",
    "mocha": "^10.2.0",
    "postcss": "^8.4.28",
    "postcss-nesting": "^12.0.1",
    "sinon": "^17.0.0",
    "stylelint": "^15.10.3",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-scss": "^5.2.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "vite": "^4.4.5"
  },
  "dependencies": {
    "handlebars": "^4.7.8",
    "nanoid": "^4.0.2",
    "vite-plugin-handlebars": "^1.6.0"
  }
}
